<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AgentLabo.ProfilAgentUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/FirstNameProfilAgent"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_style"
            android:drawableRight="@drawable/nom_util"
            android:hint="Prénom"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textPersonName"
            />
        <EditText
            android:id="@+id/SecondNameProfilAgent"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style"
            android:drawableRight="@drawable/nom_util"
            android:hint="Nom"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/DateNaissProfilAgent"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style"
            android:drawableRight="@drawable/date"
            android:hint="JJ / MM / AAAA"
            android:inputType="date"
            android:lines="1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/TelephoneProfilAgent"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style"
            android:digits="0123456789"
            android:maxLength="8"
            android:drawableRight="@drawable/telephon"
            android:hint="Numero de Téléphone"
            android:inputType="phone"
            android:lines="1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/AdresseProfilAgent"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style"
            android:drawableRight="@drawable/position"
            android:hint="Adresse"
            android:inputType="textPostalAddress"
            android:lines="1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/BioProfilAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIO"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            />
        <EditText
            android:id="@+id/DescriptionProfileAgent"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:background="@drawable/edit_text_style"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/SaveProfilAgentButton"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style_smaller"
            android:text="Enregistrer"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="20dp"

            />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>