<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list"
    android:layout_margin="20dp">
    <ImageView
        android:id="@+id/IVpatientImageList"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logopatient"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/TVnamePatientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foulen Fouleni"
            android:textColor="@color/black"
            android:textSize="15dp"
            />
            <TextView
                android:id="@+id/TvtimeMessagePatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/TVmessagePatientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merci docteur je me sens mieux"
            android:textColor="#949494"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</LinearLayout>