<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#B4FFFFFF"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/background_list"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image_publication__Patient"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/doctor_ic"
            android:layout_margin="10dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Name_publication_Patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foulen Fouleni"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/text_publication_Patient"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/Name_publication_Patient"
                android:textSize="10dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/Name_publication_Patient"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:id="@+id/Time_publication_Patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/Date_publication_Patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>