<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor.Fragment.OrdonnanceDoctorFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="175dp"
       android:orientation="vertical"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="CrÃ©er ici votre ordonnance"
           android:layout_gravity="center"
           android:textColor="@color/black"
           android:textSize="30dp"
           android:layout_marginTop="20dp"/>
       <EditText
           android:id="@+id/OrdonnanceDoctor"
           android:layout_width="300dp"
           android:layout_height="50dp"
           android:layout_centerInParent="true"
           android:layout_gravity="center"
           android:layout_marginTop="30dp"
           android:background="@drawable/edit_text_style"
           android:hint="Saisir nom Medicament"
           android:paddingLeft="20dp"
           android:paddingRight="10dp"
           android:textColor="@color/black"
           android:textColorHint="#888282"
           android:textSize="15dp"
          />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="15dp"
           >

           <Button
               android:id="@+id/LessNumberMedicament"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:background="@drawable/button_style_smaller"
               android:text="-"
               android:paddingBottom="5dp"
               android:textColor="@color/white"
               android:textSize="25dp"
               android:layout_marginLeft="150dp"

               />
           <TextView
               android:id="@+id/NumberMedicamentDoctor"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1"
               android:textStyle="bold"
               android:textSize="30dp"
               android:textColor="@color/black"
               android:layout_marginLeft="31dp"/>

           <Button
               android:id="@+id/MoreNumberMedicament"
               android:layout_width="35dp"
               android:layout_height="35dp"
               android:layout_marginLeft="31dp"
               android:background="@drawable/button_style_smaller"
               android:text="+"
               android:textColor="@color/white"
               android:textSize="25dp"

               />
       </LinearLayout>
       <TextView
           android:id="@+id/DescriptionMedicamentTV"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Descrription"
           android:textColor="@color/black"
           android:textSize="20dp"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="50dp"
           />
       <EditText
           android:id="@+id/DescriptionOrdonnanceDoctor"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:layout_marginTop="10dp"
           android:padding="15dp"
           android:background="@drawable/edit_text_style"
           android:layout_gravity="center"
           />

       <Button
           android:id="@+id/ConfirmOrdonnanceDoctorButton"
           android:layout_width="233dp"
           android:layout_height="40dp"
           android:background="@drawable/button_style_smaller"
           android:text="Confirmer"
           android:layout_marginTop="15dp"
           android:textColor="@color/white"
           android:layout_gravity="center"
           android:textSize="20dp"

           />

   </LinearLayout>

</FrameLayout>