<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentPatientInscription">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:text="Verifier les conditions qui s’appliquent à vous "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ConditionPatient"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:hint="Lesquels"
            android:textColorHint="@color/gray"
            android:paddingLeft="20dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textColor="@color/black" />


        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="prenez-vous actuellement des médicaments"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <RadioGroup
            android:id="@+id/Radio_Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            >

            <RadioButton
                android:id="@+id/YesMedicament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:buttonTint="@color/bluetitle"
                />

            <EditText
                android:id="@+id/Medicament"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_style"
                android:hint="Lesquels"
                android:textColorHint="@color/gray"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/NoMedicament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Non"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:buttonTint="@color/bluetitle"
                />

        </RadioGroup>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="bottom">
        <!--        Buttons Layout-->

        <LinearLayout
            android:id="@+id/ButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/ReturnButtonPatientInscription"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_gravity="right"
                android:background="@drawable/button_style_smaller"
                android:text="Précednt"
                android:textColor="@color/white"
                android:textSize="10dp"

                />

            <Button
                android:id="@+id/FinishButtonPatientInscription"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_gravity="left"
                android:layout_marginLeft="31dp"
                android:background="@drawable/button_style_smaller"
                android:text="Terminer "
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="630dp"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse" />

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>