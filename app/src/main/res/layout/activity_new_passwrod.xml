        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe oubliée"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"

            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="190dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Veuillez saisir votre nouveau mot de passe."
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:textSize="16dp"
                android:layout_gravity="center"
                />
                <EditText
                    android:id="@+id/NewPassword"
                    android:layout_width="233dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:textColorHint="#888282"
                    android:hint="*************"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:drawableRight="@drawable/cle"
                    android:background="@drawable/edit_text_style"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:id="@+id/ConfirmNewPassword"
                    android:layout_width="233dp"
                    android:layout_height="40dp"
                    android:hint="*************"
                    android:inputType="textPassword"
                    android:textColorHint="#888282"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_style"
                    android:layout_marginTop="10dp"
                    />
            <Button
                android:id="@+id/FinishButtonNewPassword"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:text="términer"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:background="@drawable/button_style"
                />

            </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="bottom"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            >
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>