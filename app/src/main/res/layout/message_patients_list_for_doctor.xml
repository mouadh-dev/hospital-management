<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#B4FFFFFF"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/background_list"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image_Message__Docteur"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/doctor_ic"
            android:layout_margin="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/Name_Message_Docteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foulen Fouleni"
                android:textColor="@color/black"
                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/Message_Recieved_Docteur"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#949494"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/Time_Message_Docteur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_gravity="center"


            />


    </LinearLayout>
</androidx.cardview.widget.CardView>