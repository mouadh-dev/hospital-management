<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_account"
    tools:context=".Fragments.Patient.PatientAccountFragment">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="100dp">


            <RelativeLayout
                android:id="@+id/rel_Background"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:layout_marginTop="70dp"
                android:background="@drawable/vector_background">

            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/doctor_woman_logo" />
            <Button
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/button_style_bluesky"
                android:text="Cliquer ici"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="160dp"
                />
            <TextView
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="Avez-vous des symptÃ´mes de covid ?"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="42dp"
                android:layout_marginTop="75dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ambulance"
                    android:layout_width="wrap_content"
                    android:layout_height="83dp"
                    android:src="@drawable/ambulance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Appeler ambulance"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/white_rectangle"
                android:elevation="4dp"
                android:orientation="vertical"
                android:text="The Awesome Sliding Up Panel"

                >

                <ImageView
                    android:id="@+id/RDVImg"
                    android:layout_width="wrap_content"
                    android:layout_height="83dp"
                    android:src="@drawable/rdv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rendez-vous"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publications"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <ListView
            android:id="@+id/list_publication_patient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>



