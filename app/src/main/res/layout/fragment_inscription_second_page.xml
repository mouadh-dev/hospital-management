<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Authentication.InscriptionSecondPageFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <EditText
            android:id="@+id/InscriptionAdresseSecondPage"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="@drawable/edit_text_style"
            android:drawableRight="@drawable/position"
            android:hint="Adresse"
            android:inputType="textPostalAddress"
            android:lines="1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/InscriptionDateSecondPage"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text_style"
            android:drawableRight="@drawable/date"
            android:hint="JJ / MM / AAAA"
            android:inputType="date"
            android:lines="1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/InscriptionPhoneNumberSecondPage"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text_style"
            android:digits="0123456789"
            android:maxLength="8"
            android:drawableRight="@drawable/telephon"
            android:hint="Numero de Téléphone"
            android:inputType="phone"
            android:lines="1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="#888282"
            android:textSize="15dp" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Quel est votre sexe?"
            android:textColor="@color/black"
            android:textSize="17dp" />


        <RadioGroup
            android:id="@+id/Radio_Group_secondPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <RadioButton
                android:id="@+id/FirstRadioButtonSecondeInscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bluetitle"
                android:gravity="left"
                android:pointerIcon="all_scroll"
                android:text="Homme"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <!--                <ImageView-->
            <!--                    android:id="@+id/MaleIMg"-->
            <!--                    android:layout_width="22dp"-->
            <!--                    android:layout_height="26dp"-->
            <!--                    android:src="@drawable/male"-->
            <!--                    android:layout_toRightOf="@+id/FirstRadioButtonSecondeInscription"-->
            <!--                    />-->

            <RadioButton
                android:id="@+id/SecondeRadioButtonSecondeInscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FirstRadioButtonSecondeInscription"
                android:buttonTint="@color/bluetitle"
                android:text="Femme"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <!--                <ImageView-->
            <!--                    android:layout_width="22dp"-->
            <!--                    android:layout_height="26dp"-->
            <!--                    android:src="@drawable/female"-->
            <!--                    android:layout_toRightOf="@+id/SecondeRadioButtonSecondeInscription"-->
            <!--                    android:layout_below="@id/FirstRadioButtonSecondeInscription"/>-->


            <RadioButton
                android:id="@+id/ThirdRadioButtonSecondeInscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SecondeRadioButtonSecondeInscription"
                android:buttonTint="@color/bluetitle"
                android:text="Ne pas préciser"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <!--                <ImageView-->
            <!--                    android:layout_width="22dp"-->
            <!--                    android:layout_height="26dp"-->
            <!--                    android:src="@drawable/both"-->
            <!--                    android:layout_toRightOf="@+id/ThirdRadioButtonSecondeInscription"-->
            <!--                    android:layout_below="@+id/SecondeRadioButtonSecondeInscription"/>-->


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Groupe sanguin"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/triangle" />

            <Spinner
                android:id="@+id/InscriptionBloodSecondPage"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/spinner_style"
                android:entries="@array/Group_Sanguin"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown"
                android:textSize="15dp"
                android:theme="@style/Spinner"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="233dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/ReurnbuttonSecondePage"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:background="@drawable/cancel_button_style"
                android:text="Précédent"
                android:textColor="@color/white"
                android:textSize="10dp"

                />

            <Button
                android:id="@+id/NextButtonSecondePage"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:layout_marginLeft="31dp"
                android:background="@drawable/button_style_smaller"
                android:text="Suivant"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="630dp"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty_ellipse" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty_ellipse" />

        </LinearLayout>


    </RelativeLayout>
    </FrameLayout>
</ScrollView>