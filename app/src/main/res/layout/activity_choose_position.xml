<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_page">
    >
    <RelativeLayout
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle"
        android:layout_margin="30dp">


<!--        Spinner and editText layouts-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous êtes?"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:layout_marginRight="55dp"
                />

<!--            spinner and triangle-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/triangle"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="200dp"/>
            <Spinner
                android:id="@+id/PositionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/spinner_style"
                android:entries="@array/User_Position"

                />
            </RelativeLayout>

            <EditText
                android:id="@+id/MatriculeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="Matricule"
                android:textColorHint="@color/gray"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_style"
                android:paddingLeft="20dp"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/NumeroCINEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="Num CIN"
                android:textColorHint="@color/gray"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_style"
                android:paddingLeft="20dp"
                android:visibility="gone"

                />
            <EditText
                android:id="@+id/NumeroDossierEditText"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:hint="Num dossier medicale"
                android:textColorHint="@color/gray"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_style"
                android:paddingLeft="20dp"
                android:visibility="gone"

                />
        </LinearLayout>

    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="bottom"
         android:layout_marginBottom="50dp"
         >
<!--        Buttons Layout-->

        <LinearLayout
            android:id="@+id/ButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"

            >
            <Button
                android:id="@+id/ReturnButtonChoosePosition"
                android:text="précédent"
                android:textColor="@color/white"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:background="@drawable/button_style_smaller"
                android:textSize="10dp"

                />
            <Button
                android:id="@+id/NextButtonChoosePosition"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:text="Suivant "
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_style_smaller"
                />

        </LinearLayout>



<!--        Views Layout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ButtonLayout"

            >
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/empty_ellipse"
                />

        </LinearLayout>


     </RelativeLayout>


</RelativeLayout>