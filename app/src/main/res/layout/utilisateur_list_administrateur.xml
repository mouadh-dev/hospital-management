<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#B4FFFFFF"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/background_list"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_list_utilisateur"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/doctor_ic"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/name_utilisateur_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr Foulen Fouleni"
            android:textColor="@color/black"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/nature_utilisateur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Généraliste"
            android:textColor="#949494"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/DesactiverButtom"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginLeft="31dp"
            android:background="@drawable/button_style_smaller"
            android:text="Desactiver"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/SupprimerButtom"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_marginLeft="31dp"
                android:background="@drawable/button_style_smaller_gris"
                android:text="Supprimer"
                android:textColor="@color/white"
                android:textSize="10dp"
                />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>