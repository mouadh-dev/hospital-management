<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.AgentLabo.ProfilAgentLaboActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_account"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/labo_picture" />

        <FrameLayout
            android:id="@+id/UpdateProfilAgentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="100dp"
                android:id="@+id/profilAgentLayoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_Agent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Foulen Fouleni"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="40dp" />

                    <ImageView
                        android:id="@+id/IVprofilAgentUpdate"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/edit"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/PhoneNumber_Agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="** *** ***"
                    android:textColor="@color/gray_specific"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/BirthDate_Agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="21/05/1997 24ans"
                    android:textColor="@color/gray_specific"
                    android:textSize="20dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>



</ScrollView>