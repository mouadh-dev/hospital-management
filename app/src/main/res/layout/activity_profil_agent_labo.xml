<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.AgentLabo.ProfilAgentLaboActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_account"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/patientprofilepicture" />

        <FrameLayout
            android:id="@+id/UpdateProfilAgentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/UpdateprofilAgentLayoutContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modifier votre profil"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="100dp"
                android:id="@+id/profilAgentLayoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_Agent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Foulen Fouleni"
                        android:textColor="@color/black"
                        android:textSize="35dp" />

                    <ImageView
                        android:id="@+id/IVprofilAgentUpdate"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/edit" />
                </LinearLayout>

                <TextView
                    android:id="@+id/PhoneNumber_Agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="** *** ***"
                    android:textColor="@color/gray_specific"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/BirthDate_Agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="21/05/1997 24ans"
                    android:textColor="@color/gray_specific"
                    android:textSize="25dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>



</ScrollView>