<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/first_page">

    <RelativeLayout
        android:id="@+id/myRectangleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle"
        android:layout_margin="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/bienvenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:text="Bienvenue"
                android:textColor="@color/bluetitle"
                android:layout_gravity="center"
                android:textSize="48sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/cr_er_votre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Créer votre compe"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"

                />


            <EditText
                android:id="@+id/InscriptionLastNameFirstPage"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:hint="Nom"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:textColorHint="#888282"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:drawableRight="@drawable/nom_util"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                />


            <EditText
                android:id="@+id/InscriptionFirstNameFirstPage"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:hint="Prénom"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:textColorHint="#888282"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:drawableRight="@drawable/nom_util"
                android:paddingRight="10dp"
                android:textColor="@color/black"

                />
            <EditText
                android:id="@+id/InscriptionMailFirstPage"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:textColorHint="#888282"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:drawableRight="@drawable/email"
                android:paddingRight="10dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"

                />
            <EditText
                android:id="@+id/InscriptionPasswordFirstPage"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:hint="*************"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:textColorHint="#888282"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:drawableRight="@drawable/cle"
                android:paddingRight="10dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"

                />
            <EditText
                android:id="@+id/InscriptionConfirmPassFirstPage"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:hint="*************"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:textColorHint="#888282"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:drawableRight="@drawable/cle"
                android:paddingRight="10dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"

                />


<!--            Buttons Layouts-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                >
                <Button
                    android:id="@+id/ReturnbuttonFirstPage"
                    android:text="Précédent"
                    android:layout_width="101dp"
                    android:layout_height="33dp"
                    android:background="@drawable/button_style_smaller"
                    android:textSize="10dp"
                    android:textColor="@color/white"

                    />

                <Button
                    android:id="@+id/NextButtonFirstPage"
                    android:layout_width="101dp"
                    android:layout_height="33dp"
                    android:text="Suivant"
                    android:layout_marginLeft="31dp"
                    android:background="@drawable/button_style_smaller"
                    android:textSize="10dp"
                    android:textColor="@color/white"

                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="630dp"
                >
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/fill_ellipse"
                    />
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/empty_ellipse"
                    />
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/empty_ellipse"
                    />
                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/empty_ellipse"
                    />

            </LinearLayout>


    </RelativeLayout>

</RelativeLayout>