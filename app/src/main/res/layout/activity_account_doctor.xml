<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Activity.Doctors.AccountDoctorActivity">

    <LinearLayout
        android:id="@+id/containertopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--    MEssage  -->
        <LinearLayout
            android:id="@+id/MessageLayoutDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">

                <View

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/whiteellipse" />
                <!--            android:src="@drawable/back"-->
                <ImageView
                    android:id="@+id/IconReturnBackMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/forward" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>
        <!--     home   -->
        <LinearLayout
            android:id="@+id/profilInformationDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:visibility="visible">


            <androidx.cardview.widget.CardView
                android:id="@+id/roundCardView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:elevation="0dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/white"
                >

            <ImageView
                android:id="@+id/IVimageProfilDoctor"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:src="@drawable/doctor_ic"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bonjour"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Médecin !"
                    android:textColor="@color/white"
                    android:textSize="30dp" />
            </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/reglage" />
</RelativeLayout>
        </LinearLayout>

        <!--    Notification-->
        <LinearLayout
            android:id="@+id/NotificationLayoutDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <View

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/whiteellipse" />

                <ImageView
                    android:id="@+id/ReturnBackNotificationDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/forward" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Notification"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--    Reclamation-->
        <LinearLayout
            android:id="@+id/reclamationLayoutDoctor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/blue"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/blue">
                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/whiteellipse" />
                    <!--            android:src="@drawable/back"-->
                    <ImageView
                        android:id="@+id/IconReturnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/forward" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/TitleActivityBottomnavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Réclamer"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp"
                    />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/ContainerFragmentDoctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_Doctor"
        android:layout_below="@+id/containertopBar"
        android:background="@drawable/rectangle_account"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_Doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/blue"/>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_Doctor"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="200dp"
        sothree:umanoParallaxOffset="100dp"
        sothree:umanoScrollableView="@+id/list"
        sothree:umanoShadowHeight="4dp"
        android:visibility="gone"
        >
        <!-- MAIN CONTENT -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </FrameLayout>

        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:gravity="center">

                <AutoCompleteTextView
                    android:id="@+id/TxtSearch"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_style"
                    android:hint="Recherche"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/black"
                   />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/DownIC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/down_ic"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                </RelativeLayout>


            </LinearLayout>

            <ListView
                android:id="@+id/listPatientForDocteur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ListView>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    <!--Float Button -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        app:fab_size="normal"
        android:elevation="10dp"
        android:src="@drawable/whitesearch"
        />

</RelativeLayout>