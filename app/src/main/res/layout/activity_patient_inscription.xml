<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/first_page">

    <RelativeLayout
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/rectangle">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >

        <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Verifier les conditions qui s’appliquent à vous "
                android:textColor="@color/black"
                android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/triangle"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="200dp"/>

            <Spinner
                android:id="@+id/ConditionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:entries="@array/Condition"
                android:background="@drawable/spinner_style"
                />

            </RelativeLayout>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="prenez-vous actuellement des médicaments"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/Medicament"
                    android:layout_width="233dp"
                    android:layout_height="40dp"
                    android:hint="Lesquels"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_marginTop="20dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    />

            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="50dp"
        >
        <!--        Buttons Layout-->

        <LinearLayout
            android:id="@+id/ButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"

            >
            <Button
                android:id="@+id/ReturnButtonPatientInscription"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:text="Précednt"
                android:textSize="10dp"
                android:background="@drawable/button_style_smaller"
                android:textColor="@color/white"
                android:layout_gravity="right"

                />
            <Button
                android:id="@+id/FinishButtonPatientInscription"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:text="Terminer "
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_gravity="left"
                android:background="@drawable/button_style_smaller"
                android:layout_marginLeft="31dp"
                />
        </LinearLayout>

<!--        Views Layouts-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ButtonLayout"
            >
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/fill_ellipse"
                />
        </LinearLayout>


    </RelativeLayout>


    </RelativeLayout>